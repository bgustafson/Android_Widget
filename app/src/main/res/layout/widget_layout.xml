<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/transparent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:id="@+id/header"
                    android:background="@drawable/headerborder">

        <ImageView android:id="@+id/icon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/icon"
                   android:layout_centerVertical="true"/>

        <TextView android:id="@+id/title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:text="Widget Name"
                  android:layout_toRightOf="@id/icon"/>

        <TextView android:id="@+id/subtitle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:text="Widget Subtitle"
                  android:layout_marginBottom="5dp"
                  android:layout_below="@id/title"
                  android:layout_toRightOf="@id/icon"/>


        <ImageView android:id="@+id/add"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/widget_button_schedule"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="8dp"
                   android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:background="@drawable/listview_container"
                    android:layout_marginTop="-1dp">

    <ListView android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"/>


    </RelativeLayout>

</RelativeLayout>